{
  "$schema": "https://json.schemastore.org/tsconfig",
  "_version": "20.1.0",

  "compilerOptions": {
    "lib": ["es2023"],
    "module": "node16",
    "target": "es2022",

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node16",

    "baseUrl": "./",
    "paths": {
      "modules/*": ["modules/*"],
      "utils/*": ["utils/*"],
      "core/*": ["core/*"],
      "lib/*": ["lib/*"]
    },

    "jsx": "react",
    "jsxFactory": "elements.createElement"
  }
}
